@model ProductListViewModel

@{
    ViewData["Title"] = "Home";
}



<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- section-title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h2 class="title">Самые популярные</h2>
                    <div class="pull-right"></div>
                </div>
            </div>
            <!-- /section-title -->

            @foreach (var item in Model.TopProducts)
            {
                @await Html.PartialAsync("TopBooksSummary", item)
            }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->

<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- section-title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h2 class="title">Новинки</h2>
                    <div class="pull-right">
                        <div class="product-slick-dots-1 custom-dots"></div>
                    </div>
                </div>
            </div>
            <!-- section-title -->
            <!-- Product Slick -->
            <div class="col-md-12 col-sm-9 col-xs-9">
                <div class="row">
                    <div id="product-slick-1" class="product-slick">
                        <!-- Product Single -->

                        @foreach (var item in Model.NewProducts)
                        {
                            @await Html.PartialAsync("NewBooksSummary", item)
                        }

                        <!-- /Product Single -->
                    </div>
                </div>
            </div>
            <!-- /Product Slick -->
        </div>
        <!-- /row -->

        <!-- row -->
        <div class="row">
            <!-- section-title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h2 class="title">Популярные сегодня</h2>
                    <div class="pull-right">
                        <div class="product-slick-dots-2 custom-dots"></div>
                    </div>
                </div>
            </div>
            <!-- section-title -->
            <!-- Product Slick -->
            <div class="col-md-12 col-sm-9 col-xs-9">
                <div class="row">
                    <div id="product-slick-2" class="product-slick">
                        <!-- Product Single -->

                        @foreach (var item in Model.TopDayProducts)
                        {
                            @await Html.PartialAsync("NewBooksSummary", item)
                        }

                        <!-- /Product Single -->
                    </div>
                </div>
            </div>
            <!-- /Product Slick -->
        </div>
        <!-- /row -->


    </div>
    <!-- /container -->
</div>
<!-- /section -->
