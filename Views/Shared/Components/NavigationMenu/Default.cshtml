@model NavigationMenuViewModel


<!-- aside widget -->
<div class="aside">
    <h3 class="aside-title">Возраст:</h3>
    <ul class="size-option">
        @foreach (var age in Model.Age)
        {
            <li>
                <a asp-action="List" asp-controller="Product"
                   asp-route-age="@age">
                    @age+
                </a>
            </li>
        }
    </ul>
</div>
<!-- /aside widget -->
<!-- aside widget -->
<div class="aside">
    <h3 class="aside-title">Язык издания:</h3>
    <ul class="size-option">
        @foreach (var language in Model.Language)
        {
            <li>
                <a asp-action="List" asp-controller="Product"
                   asp-route-language="@language">
                    @language
                </a>
            </li>
        }
    </ul>
</div>
<!-- /aside widget -->
<!-- aside widget -->
<div class="aside">
    <h3 class="aside-title">Жанр: </h3>
    <ul class="list-links">
        @foreach (var category in Model.Category)
        {
            <li>
                <a asp-action="List" asp-controller="Product"
                   asp-route-category="@category">
                    @category
                </a>
            </li>
        }
    </ul>
</div>
<!-- /aside widget -->