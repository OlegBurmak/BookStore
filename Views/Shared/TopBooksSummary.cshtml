@model Product



    <div class="col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3">
        <a class="banner banner-1" asp-route-productId="@Model.ProductId" 
                asp-action="PageProduct" 
                asp-controller="Product">
            <img src="@Model.Image" alt="">
            <div class="banner-caption text-center">
                <h2 class="white-color">@Model.Name - @Model.Rate</h2>
            </div>
        </a>
    </div>
